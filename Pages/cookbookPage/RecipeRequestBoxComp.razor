

<div class="oneRecipeInBox">
    <div class="portions-in-box meal-input-box">
        <label for="howManyIn">Portions</label>
        <input type="number" class="inputPortions" name="howManyIn" min="1" max="10" @bind="RecipeRequest.portions">
    </div>
    <div class="meal-input-box">
        <label for="difficultyIn">Difficulty</label>
        <select name="difficultyIn" @bind="RecipeRequest.difficulty">
            <option value="any">Any</option>
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>
    </div>
    <div>
        <label for="recipeType">Recipe type</label>
        <select name="recipeType" @bind="RecipeRequest.category">
            <option value="any">Any</option>
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="dinner">Dinner</option>
            <option value="dessert">Dessert</option>
            <option value="snack">Snack</option>
        </select>
    </div>
    <div class="cooktimeIn-box meal-input-box">
        <label for="maxCookTimeIN">Max cook time</label>
        <input type="number" min="1" max="999" @bind="RecipeRequest.maxCookTime" />
    </div>
</div>

